<%= form_with(model: planning_session, class: 'space-y-6') do |form| %>
  <% if planning_session.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-lg">
      <h2 class="font-semibold mb-2"><%= pluralize(planning_session.errors.count, "error") %> prohibited this planning session from being saved:</h2>

      <ul class="list-disc list-inside">
        <% planning_session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col">
    <%= form.label :name, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :name, class: 'mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div>
    <%= form.submit 'Save', class: 'bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600' %>
  </div>
<% end %>
